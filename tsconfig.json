{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": false,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [ "src/*" ]
    },
    "lib": [ "esnext" ]
  },
  "include": [ "src/**/*.ts" ],
  "exclude": [ "node_modules" ]
}
